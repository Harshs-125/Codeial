<li id="comment-<%= comment._id %>">
  <p>
      <% if (locals.user && locals.user.id == comment.user.id){ %>
      
      <small>
          <a class="delete-comment-button" href="/comment/deletecomment/<%= comment.id %>">Delete</a>
      </small>
      <% } %>
      <%= comment.content %>
      <br>
      <small>
          <%= comment.user.name %>
      </small>
      <small>
          <%if(locals.user){%>
            <a class="toggle-like-button" href="/like/toggle/?id=<%=comment._id%>&type=Comment" data-likes="<%=comment.likes.length%>"><%=comment.likes.length%> Like</a>
          <%}else{%>
            <%=comment.likes.length%>
            <%}%>
      </small>
      
  </p>    

</li>