<%if(locals.user){%>
<div class="new-post-form">
  <form action="/posts/createpost" method="POST">
    <textarea name="content" rows="3" cols="30"></textarea>
    <input type="submit" value="Post" />
  </form>
</div>
<%}%>
<div id="post-container">
  <% for(post of posts){%>
  <div id="post-list-container">
    <%if(locals.user && locals.user.id==post.user.id){%>
    <a href="/posts/deletepost/<%=post.id%>">Delete</a>
    <%}%>
    <ul>
      <li><%=post.content %></li>
      <p><%=post.user.name %></p>
      <p><%=post.createdAt %></p>
      <%-include('comment')-%>
    </ul>
  </div>
  <%}%>
</div>
